<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.admindesktop.model.controller.CadastroController">
   <children>
      <Label layoutX="30.0" layoutY="14.0" text="Cadastro Inicial do Administrador">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox layoutX="30.0" layoutY="60.0" prefWidth="340.0" spacing="10.0">
         <children>
            <Label text="E-mail (Login)" />
            <TextField fx:id="txtEmail" promptText="Digite o e-mail de acesso" />
            <Label text="Senha" />
            <PasswordField fx:id="txtSenha" promptText="Digite a senha de acesso" />
         </children>
      </VBox>
      <Button layoutX="300.0" layoutY="190.0" mnemonicParsing="false" onAction="#OnClickBtnSalvar" style="-fx-base: #2e8b57;" text="Salvar" textFill="WHITE" />
      <Label fx:id="menssagemText" layoutX="30.0" layoutY="160.0" prefWidth="340.0" textFill="RED" />
   </children>
</AnchorPane>